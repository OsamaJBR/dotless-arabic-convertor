{
    "manifest_version": 2,
    "name": "Dotless app",
    "description": "إزالة النقاط من النصوص العربية",
    "version": "1.0",
    "browser_action": {
        "default_icon": "assets/logo.png",
        "default_popup": "popup.html"
    },
    "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",
    "content_scripts": [
        {
          "matches": [
            "https://*/*"
          ],
          "js": [
            "popup.js",
            "modules/convertToDotless.js",
            "modules/lettersConfig.js"
          ]
        }
      ]
}